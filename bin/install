#!/usr/bin/env bash

set -eo pipefail

fail() {
  echo -e "\e[31mFail:\e[m $*"
  exit 1
}

install_mint() {
  local install_type=$1
  local version=$2
  local install_path=$3

  if [ "$install_type" != "version" ]; then
    fail "asdf-mint supports release installs only"
  fi

  local platform

  case "$OSTYPE" in
    darwin*) platform="osx" ;;
    linux*) platform="linux" ;;
    *) fail "Unsupported platform" ;;
  esac

  local architecture

  case "$(uname -m)" in
    x86_64) architecture="x86_64" ;;
    *) fail "Unsupported architecture" ;;
  esac

  local download_url="https://github.com/mint-lang/mint/releases/download/${version}/mint-${version}-${platform}"
  local tmp_download_dir
  tmp_download_dir=$(mktemp -d -t mint_tmp_XXXXXX)
  local source_path="${tmp_download_dir}/mint"

  (
    echo "âˆ— Downloading and installing mint..."
    curl --silent --fail --location --create-dirs --output "$source_path" "$download_url" || fail "Could not download mint $version"
    mv "$source_path" "$install_path"
    rm -rf "$tmp_download_dir"
    echo "The installation was successful!"
  ) || (
    rm -rf "$install_path"
    fail "An error occurred"
  )
}

install_mint "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
